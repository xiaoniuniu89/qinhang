# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration (Production only)
# Comma-separated list of allowed origins
# ALLOWED_ORIGINS=https://ccpiano.vercel.app,https://ccpiano.ie

# Authentication
# IMPORTANT: Change this to a strong random string in production
BETTER_AUTH_SECRET=your-secret-key-change-in-production-generate-a-random-32-char-string
BETTER_AUTH_URL=http://localhost:3000

# Module Toggles (true/false or 1/0)
MODULE_BLOG=true
MODULE_AI_AGENT=true
MODULE_MEDIA_HOSTING=true
MODULE_SCHEDULING=true
MODULE_RAG=true

# Database Configuration
DB_TYPE=sqlite
DB_FILENAME=./data/qinhang.db
# For PostgreSQL:
# DB_TYPE=postgres
# DATABASE_URL=postgresql://user:password@localhost:5432/qinhang

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=100
# For S3:
# STORAGE_TYPE=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# AI Configuration (for AI Agent module)
AI_PROVIDER=openai
AI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
# For Anthropic:
# AI_PROVIDER=anthropic
# AI_API_KEY=your-anthropic-api-key
# AI_MODEL=claude-3-5-sonnet-20241022

# Vector Database Configuration (for RAG module)
VECTOR_DB_TYPE=chromadb
VECTOR_DB_URL=http://localhost:8000
# VECTOR_DB_API_KEY=your-api-key-if-needed
# For Pinecone:
# VECTOR_DB_TYPE=pinecone
# VECTOR_DB_URL=your-pinecone-url
# VECTOR_DB_API_KEY=your-pinecone-api-key

# Google Calendar API Configuration (for checking lesson availability)
# GOOGLE_CREDENTIALS={"type":"service_account","project_id":"your-project",...}
# GOOGLE_CALENDAR_ID=your-teaching-calendar-id@group.calendar.google.com

# Gmail SMTP Configuration (for sending contact form and booking emails)
# You need a Gmail App Password (not your regular password!)
# Instructions: https://support.google.com/accounts/answer/185833
# GMAIL_EMAIL=cczcy333@gmail.com
# GMAIL_PASSWORD=your-16-character-app-password
# GMAIL_TEACHER_EMAIL=cczcy333@gmail.com
# GMAIL_FROM=CC Piano <cczcy333@gmail.com>
